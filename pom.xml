                <artifactId>hibernate-core</artifactId>
                <version>${version.org.hibernate}</version>
                <!-- this already part of JDK6 -->
                <exclusions>
                    <exclusion>
                        <groupId>xml-apis</groupId>
                        <artifactId>xml-apis</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
